<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1 class = "page-title">Posts</h1>

<ul>
    <% results.forEach(function(post) {%>
        <li class = profile-posts>
            <br>
            <p class="larger-text"><a href="/users/<%= post.postedBy.id %>/"><%= post.postedBy.name %></a><img class = "profile-picture" src = "<%= post.postedBy.profileImageUrl %>"></p>
            <br>
            <p><%= post.message %></p>
            <br>
            <img 
            src ="<%= post.imageUrl %>"
            width ="100"
            >
            <br>
            <p><%= post.createdAt %></p>
            <br>
            <p> <%= post.likedBy.length %> likes </p>
            <p> <%= post.dislikedBy.length %> dislikes </p>
            <p><button class = "default-button" onclick = "likePost(<%= post.id %>)">LikeğŸ‘</button> 
            <button class = "default-button" onclick = "dislikePost(<%= post.id %>)">DislikeğŸ‘</button>
            </p>
        </li>
    <% }); %>
</ul>

<%if (previous) { %>
    <a href="<%= previous %>">Previous</a>
<% } %>

<%if (next) { %>
    <a href="<%= next %>">Next</a>
<% } %>

</body>
<%- include('_footer') -%>
</html>